<header role="banner" class="header_area">
    <div class="header_top">
        <div class="container">
            <div class="row">
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <div class="header_top_left">
                        <div class="news_twiks">
                            <h4 style="margin: 0 0 15px;">{{ page.header }}</h4>
                        </div>
                        <div class="news_twiks_items">
                            <div id="carousel-example-generic1" class="carousel slide" data-ride="carousel">

                                <!-- Wrapper for slides -->
                                <div class="carousel-inner" role="listbox">
                                    <div class="item active">
                                        <p>{{ page.header_slider_text_1 }}</p>
                                    </div>
                                    <div class="item">
                                        <p>{{ page.header_slider_text_2 }}</p>
                                    </div>
                                    <div class="item">
                                        <p>{{ page.header_slider_text_3 }}</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 col-sm-6 col-xs-12">
                    <div class="header_top_right">
                        <div class="social_header">
                            <ul>
                                <li><a class="fa fa-facebook" href="index.html"></a></li>
                                <li><a class="fa fa-twitter" href="index.html"></a></li>
                                <li><a class="fa fa-google-plus" href="index.html"></a></li>
                                <li><a class="fa fa-linkedin" href="index.html"></a></li>
                            </ul>
                        </div>
                        <div class="header_search_box">
                            <form class="header_search hidden-xs" action="index.html">
                                {#<input type="text" placeholder="Search">#}
                                {{ page.search }}
                                <input type="submit" value="">
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- ~~~=| Logo Area START |=~~~ -->
    <div class="header_logo_area">
        <div class="container">
            <div class="row">
                <div class="col-md-4 col-sm-4 col-xs-12">
                    <div class="logo">{{ page.header_icon }} </div>
                </div>
                <div class="col-md-8 col-sm-8 col-xs-12">
                    <div class="header_add"> {{ page.header_add }} </div>
                </div>
            </div>
        </div>
    </div>
    <!-- ~~~=| Logo Area END |=~~~ -->

    <!-- ~~~=| Main Navigation START |=~~~ -->
    <div class="mainnav">
        <div class="container">
            <div class="row">
                <div class="col-md-12 col-sm-12 col-xs-12">
                    <nav class="main_nav_box">
                        <ul id="nav">
                            {#<li class="nav_news">#}
                            {{ page.primary_menu }}

                        </ul>
                    </nav>

                    <!-- ~~~=| Mobile Navigation END |=~~~ -->
                    <div class="only-for-mobile">
                        <div class="col-md-12 col-sm-12 col-xs-12">
                            <ul class="ofm">
                                <li class="m_nav"><i class="fa fa-bars"></i> Hash</li>
                            </ul>

                            <!-- MOBILE MENU -->
                            <div class="mobi-menu">
                                <div id='cssmenu'>
                                    <ul>
                                        <li class="nav_news">
                                            {{ page.primary_menu }}
                                        </li>
                                    </ul>
                                </div>
                            </div>
                        </div>
                    </div>
                    <!-- ~~~=| Mobile Navigation START |=~~~ -->

                </div>
            </div>
        </div>
    </div>
    <!-- ~~~=| Main Navigation END |=~~~ -->
</header>